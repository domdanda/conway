void clearArr(){
  
  for(int i = 0; i < arraySize[0]; i++){
    for(int j = 0; j < arraySize[1]; j++){
      colour[i][j] = 0;
    }
  }
  
}

void iteration(){
  
  int neighborNum = 0;
  
  int[][] newColour =  new int[arraySize[0]][arraySize[1]];
  
  for(int i = 0; i < arraySize[0]; i++){
    for(int j = 0; j < arraySize[1]; j++){
      
      //search all values around the array and count how many neighbors exist
      
      if(i != 0){
        if(j != 0){
          if(colour[i-1][j-1]==1){neighborNum++;}
        }
        if(colour[i-1][j]==1){neighborNum++;}
        if(j != arraySize[1]-1){
          if(colour[i-1][j+1]==1){neighborNum++;}
        }
      }
      
      if(j != 0){
        if(colour[i][j-1]==1){neighborNum++;}
      }
      if(j != arraySize[1]-1){
        if(colour[i][j+1]==1){neighborNum++;}
      }
      
      if(i != arraySize[0]-1){
        if(j != 0){
          if(colour[i+1][j-1]==1){neighborNum++;}
        }
        if(colour[i+1][j]==1){neighborNum++;}
        if(j != arraySize[1]-1){
          if(colour[i+1][j+1]==1){neighborNum++;}
        }
      }
        
      //check if the current cell is alive. if it has 2-3 neighbors, it survives, else it doesnt
      if(colour[i][j]==1){
        if(neighborNum==3||neighborNum==2){
          newColour[i][j] = 1;
        }
        else{
          newColour[i][j] = 0;
        }
      }
        
      //check if the current cell is dead. if it has 3 neighbors, birth it next round
      if(colour[i][j]==0){
        if(neighborNum==3){
          newColour[i][j] = 1;
        }
        else{
          newColour[i][j] = 0;
        }
      }
        
      neighborNum = 0;
      
    }
  }
  
  colour = newColour;
  
}

void drawIteration(){
   for(int i = 0; i < arraySize[0]; i++){
     for(int j = 0; j < arraySize[1]; j++){
       if(colour[i][j] == 1){
         fill(255);
       }
       else{fill(0);}
       stroke(50);
       rect(10*j+xpos, 10*i+ypos, 10, 10);
     }
   }
}

void draw() {
  background(50);
  noStroke();
  fill(50);
  
  drawIteration();
   
  iteration();
}
